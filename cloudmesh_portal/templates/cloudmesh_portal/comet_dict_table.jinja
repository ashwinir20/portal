<link rel="stylesheet"
      type="text/css"
      href="https://cdn.datatables.net/1.10.9/js/jquery.dataTables.min.css"/>

<link rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

<script type="text/javascript" charset="utf-8">
    $(document).ready(function() {
        $('#dictTable').DataTable({
           aLengthMenu: [
                [10, 20, 50, 100, 200, -1],
                [10, 20, 50, 100, 200, "All"]
            ],
            iDisplayLength: 10
        });
    } );
</script>

<table  id="dictTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Power</th>
        {% for attribute in order %}
                <th> {{ attribute }} </th>
        {% endfor %}
        </tr>
    </thead>
    <tbody>
        {% for index, element in data.items %}
        <tr>
            <td>
                <a href="#">

                   {% if element["state"] == "active" %}
                        <font color="00CC00">{% endifequal %}

                   {% elif element["state"] == "nostate" %}
                        <font color="C0C0C0">{% endifequal %}

                   {% elif element["state"] == "paused" %}
                        <font color="336699">{% endifequal %}

                   {% elif element["state"] == "inactive" %}
                        <font color="C0C0C0">{% endifequal %}

                   {% elif element["state"] == "off" %}
                        <font color="FF0000">{% endifequal %}


                   {% elif element["state"] == "-" %}
                        <font color="C0C0C0">{% endifequal %}

                   {% elif element["state"] == None %}
                        <font color="C0C0C0">{% endifequal %}

                    {% endif %}
                    <i class="fa fa-power-off"></i>
                    </font>
                    </a>
                </td>
            {% for a in order %}
                 <td>

                   {% ifequal a "state" %}
                      {% ifequal element|get_item:"state" "active" %}
                        <font color="00CC00">{% endifequal %}

                   {% ifequal element|get_item:"state" "nostate" %}
                        <font color="C0C0C0">{% endifequal %}


                   {% ifequal element|get_item:"state" "paused" %}
                        <font color="336699">{% endifequal %}

                   {% ifequal element|get_item:"state" "inactive" %}
                        <font color="C0C0C0">{% endifequal %}

                   {% ifequal element|get_item:"state" "off" %}
                        <font color="FF0000">{% endifequal %}

                   {% ifequal element|get_item:"state" "-" %}
                        <font color="C0C0C0">{% endifequal %}

                   {% ifequal element|get_item:"state" None %}
                        <font color="C0C0C0">{% endifequal %}
                           {{ element|get_item:a }}
                    <font></td>
                {% endifequal %}
                {% ifnotequal a "state" %}
                        {{ element|get_item:a }}
                {% endifnotequal %}
                    </td>

            {% endfor %}
        </tr>
        {% endfor %}
    </tbody>
</table>



<script src="https://cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
